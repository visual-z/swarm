{
  "name": "@swarmroom/sdk",
  "version": "0.2.0",
  "type": "module",
  "description": "TypeScript SDK for SwarmRoom - connect AI agents to the SwarmRoom hub",
  "keywords": [
    "swarmroom",
    "sdk",
    "agent",
    "mcp",
    "ai",
    "client"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/visual-z/swarm.git",
    "directory": "packages/sdk"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@swarmroom/shared": "workspace:*",
    "multicast-dns": "^7.2.5",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/multicast-dns": "^7.2.4",
    "@types/ws": "^8.18.1"
  }
}
